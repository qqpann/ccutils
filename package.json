{
  "name": "@qqpann/ccutils",
  "version": "0.0.5",
  "description": "CLI tool for managing Claude Code permission settings across multiple scopes",
  "type": "module",
  "bin": {
    "ccutils": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
