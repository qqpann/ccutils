  ],
  "author": "Qiushi Pan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qqpann/ccutils.git"
  },
  "homepage": "https://github.com/qqpann/ccutils#readme",
  "bugs": {
    "url": "https://github.com/qqpann/ccutils/issues"
  },
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "glob": "^13.0.0",
    "ink": "^6.6.0",
    "react": "^19.2.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.0.9",
